<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Safer School Route</title>
    <link href='https://fonts.googleapis.com/css?family=Kaushan Script' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.bootcss.com/wordcloud2.js/1.1.0/wordcloud2.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .logo{left:20px;position:fixed;color:#fec503}.logo p{font-family:'Kaushan Script';font-size:25px}.dropdownArea{float:right;margin-right:5%}.topnav{background-color:#343a40;position:fixed;top:0;width:100%;height:70px;transition:top .3s;text-align:center;padding-top:20px;z-index:100}.dropdown{padding-top:9px;display:block;float:left;position:relative}.dropbtn{background-color:#343a40;color:#fff;font-size:15px;border:none;font-family:'roboto san serif'}.dropdown-content{height:0;overflow:hidden;position:absolute;min-width:160px;box-shadow:0 8px 16px 0 rgba(0,0,0,.2);z-index:1;transition:.3s;text-align:center}.dropdown-content a{background-color:#fff;color:#000;font-size:15px;padding:12px 16px;text-decoration:none;display:block;font-family:'roboto san serif'}.dropdown-content a:hover{background-color:#343a40;color:#fff;transition:.8s}.dropdown:hover .dropdown-content{height:auto}#gamebtn:hover{color:#fec503}a:hover{color:#fec503;text-decoration:none}.dropdown:hover{background-color:#343a40}#dropdown2{margin-left:30px}.topnav .icon{display:none}.row i{border-radius:50%}footer{background-color:#343a40;text-align:center;color:#fff;bottom:0;width:100%}footer .footcontent{padding-top:20px}footer .footcontent a{color:#fff;font-size:15px}footer .social{margin-top:10px;padding-bottom:10px}footer ul li{list-style-type:none;display:inline-block;margin-left:5%;margin-right:5%}footer .footcontent a:hover{color:#fec503}footer .copy{margin-top:20px}footer p{margin-top:15px;color:#fff;font-weight:400}.footlogo{padding-top:15px}footer #MapMarker{color:#fff;font-size:20px;border-radius:0;padding:0;background-color:#343a40;padding-top:20px;left:0;float:left}.mel{padding-top:20px;font-size:15px}
        @@media screen and (max-width: 920px) {
            .dropdownArea{display:none}.topnav{height:70px}.topnav a.icon{float:right;display:block;color:#f2f2f2;position:absolute;right:15px;top:25px}.topnav.responsive{height:auto}.topnav.responsive{position:fixed}.topnav.responsive .logo{display:none}.topnav.responsive .icon{position:absolute;right:15px;top:25px}.topnav.responsive .dropdownArea{float:none;display:block}.topnav.responsive .dropdown{float:none;display:block}.topnav.responsive #dropdown1{margin-left:0}.topnav.responsive #dropdown2{margin-left:0}.topnav.responsive .dropdown-content{position:relative;display:block}.topnav.responsive .dropdown .dropbtn{display:block;width:100%;text-align:center}
        }
        @@media screen and (max-width:1010px) {
            footer #MapMarker{color:#fff;font-size:15px;border-radius:0;padding:0;background-color:#343a40;padding-top:0;float:none}.mel{padding-top:0;font-size:12px}
        }
        @@media screen and (max-width: 530px) {
            .footlogo{display:none}.str{display:none}footer p{padding-left:0}footer .footcontent{padding-right:0}footer ul{padding-left:0}footer ul li{display:block}footer .copy{margin-top:0}footer .footcontent a{margin-left:0}
        }
    </style>
</head>
<body>
    <div class="topnav" id="navbar">
        <div class="logo">
            <p>Safer School Route</p>
        </div>
        <div class="dropdownArea">
            <div class="dropdown" id="dropdown1">
                @Html.ActionLink("HOME", "Index", "Home", new { @class = "dropbtn" })
            </div>
            <div class="dropdown" id="dropdown2">
                @Html.ActionLink("DASHBOARD", "School_Statistic", "Home", new { @class = "dropbtn" })
            </div>
            <div class="dropdown" id="dropdown2">
                @Html.ActionLink("LEARNING", "learning", "Home", new { @class = "dropbtn" })
                <div class="dropdown-content">
                    @Html.ActionLink("PEDESTRIAN  SAFETY", "Pedestrain", "Home", new { @class = "dropbtn" })
                    @Html.ActionLink("BICYCLE SAFETY", "Bicycle", "Home", new { @class = "dropbtn" })
                    @Html.ActionLink("ROAD SAFETY", "Road", "Home", new { @class = "dropbtn" })
                </div>
            </div>
            <div class="dropdown" id="dropdown2">
                @Html.ActionLink("RESOURCES", "blog", "Home", new { @class = "dropbtn" })
            </div>
            <div class="dropdown" id="dropdown2">
                <div class="dropbtn" id="gamebtn">GAMES</div>
                <div class="dropdown-content">
                    @Html.ActionLink("RIDE2SCHOOL", "Game", "Home")
                    @Html.ActionLink("SAFETY VEST", "Game2", "Home")
                </div>
            </div>
            <div class="dropdown" id="dropdown2">
                @Html.ActionLink("ABOUT", "About", "Home", new { @class = "dropbtn" })
            </div>
        </div>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()"><i class="fa fa-bars"></i></a>
    </div>
    <script type="text/javascript">
        function myFunction() {
          var x = document.getElementById("navbar");
          if (x.className === "topnav") {
            x.className += " responsive";
          } else {
            x.className = "topnav";
          }
        }
    </script>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer>
            <div class="row" style="background-color: #343a40;padding-top:0">
                <div class="col-md-2 footlogo">
                    <img src="~/Images/Logo (1).png" width="100" height="70" />
                </div>
                <div class="col-md-8">
                    <ul class="footcontent">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="str"><strong>|</strong></li>
                        <li>@Html.ActionLink("Resources", "blog", "Home")</li>
                        <li class="str"><strong>|</strong></li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                    <div class="copy">
                        <p style="font-size:12px">Yellow Hats © 2020</p>
                    </div>
                </div>
                <div class="col-md-2 locate">
                    <i class="fa fa-map-marker" id="MapMarker"></i>
                    <div class="mel">Melbourne,Victoria</div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
